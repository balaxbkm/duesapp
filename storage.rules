rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures
    match /profiles/{userId}.jpg {
      // Allow anyone to see profile pictures
      allow read: if true;
      // Only the authenticated user can upload/modify their own profile picture
      // Limit file size to 2MB for profile pics
      allow write: if request.auth != null 
                   && request.auth.uid == userId 
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
